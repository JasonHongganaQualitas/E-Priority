<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".fragment.UpdateSubmittedFragment">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded_qr_border_blue"
        android:layout_gravity="center"
        android:padding="12dp"
        android:orientation="vertical">

        <TextView
            android:text="Update Submitted"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/text_reg1"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@drawable/img_submit"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Please wait for admin reviews and confirms the changes."
            android:textColor="@color/gray4"
            android:textSize="@dimen/text_small1"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>
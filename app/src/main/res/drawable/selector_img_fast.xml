<!-- res/drawable/checkbox_image_state.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when Checkbox is checked -->
    <item android:drawable="@drawable/ic_fast_checked" android:state_checked="true" />

    <!-- State when Checkbox is unchecked -->
    <item android:drawable="@drawable/ic_fast_unchecked" android:state_checked="false" />
</selector>
